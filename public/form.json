            "fields": [
                {
                    "name": "name",
                    "label": "Name",
                    "type": "text",
                    "classes": [ "w1of1", "spacer2top" ], 
                    "required": true
                },
                {
                    "name": "email",
                    "label": "Email-Adresse",
                    "type": "text",
                    "classes": [ "w1of1", "spacer2top" ], 
                    "required": true,
                    "validations": [
                        {
                            "type": "email",
                            "error": "Email-Adresse ist ungültig"
                        }
                    ]
                },
                {
                    "name": "subject",
                    "label": "Betreff",
                    "type": "text",
                    "classes": [ "w1of1", "spacer2top" ], 
                    "required": true
                },
                {
                    "name": "content",
                    "label": "Ihr Anliegen",
                    "type": "textarea",
                    "classes": [ "w1of1", "spacer2top" ], 
                    "required": true
                },
                {
                    "name": "privacy",
                    "label": "Ich habe die Datenschutzerklärung gelesen und akzeptiere sie.",
